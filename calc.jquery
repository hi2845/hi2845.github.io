
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>DOM Exercise</title>
    <script   src="https://code.jquery.com/jquery-1.12.3.min.js"
              integrity="sha256-aaODHAgvwQW1bFOGXMeX+pC4PZIPsvn2h1sArYOhgXQ="   crossorigin="anonymous"></script>
    <script>
        var first_val;
        var operand;

        function display_debug() {
            var debug_text = "<p>first_val:" + first_val + "</p>";
            debug_text += "<p>operand:" + operand + "</p>";
            debug_text += "<p><b>Result: " + result + "</b></p>";
            $('#debug_area').html(debug_text);
        }


        function button_click() {
            var num = $(this).text(#textContent); //this.textContent;
            var newval = $('#text_display').val() + num;
            $('#text_display').val(newval);

            display_debug();
        }

        function button_plus() {
            var text = $("#text_display");
            first_val = parseInt(text.val());
            text.value = ('');
            operand = '+';

            display_debug();
        }

        function button_minus() {
            var text = $("#text_display");
            first_val = parseInt(text.val());
            text.value = ('');
            operand = '-';

            display_debug();
        }

        function button_multi() {
            var text = $("#text_display");
            first_val = parseInt(text.val());
            text.value = ('');
            operand = '×';

            display_debug();
        }

        function button_div() {
            var text = $("#text_display");
            first_val = parseInt(text.val());
            text.value = ('');
            operand = '÷';

            display_debug();
        }

        function button_equal() {
            var text = $("#text_display");
            first_val = parseInt(text.val());
            if (operand == '+') {
                text.value = '' + (first_val + second_val);
            }
            else if(operand == '-') {
                text.value = ''+(first_val - second_val);
            }
            else if(operand == '×') {
                text.value = ''+(first_val * second_val);
            }
            else if(operand == '÷') {
                text.value = ''+(first_val / second_val);
            }
            result = text.value;

            display_debug();
        }

        function button_clear() {
            var text = $("#text_display");
            text.value = ('');
            first_val = ('');
            second_val= ('');
            operand = ('');
            result = ('');

            display_debug();
        }
        $(document).ready(function () {
            $(".num_btn").click(button_click);

            $('#btn_plus').click(button_plus);
            $('#btn_minus').click(button_minus);
            $('#btn_multi').click(button_multi);
            $('#btn_div').click(button_div);
            $('#btn_equal').click(button_equal);
            $('#btn_clear').click(button_clear);


        });

    </script>
    <style>
        #calc_area{
            width: auto;
            margin: 15px; padding: 15px;
            border: 3px solid skyblue;
            border-radius: 40px;
            -webkit-box-shadow: 10px 10px 22px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 10px 10px 22px 0px rgba(0,0,0,0.75);
            box-shadow: 10px 10px 22px 0px rgba(0,0,0,0.75);
        }
    </style>
</head>
<body>
<div id="calc_area">
    <h1>계산기</h1>
    <hr />
    <br />
    <table width="250px" height="250px" style="border: 3px solid black" style="align-content: center">
        <tr><td colspan="10" style="padding: 10px"><input type="text" id="text_display"/></td></tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr>
            <td><button id="btn_plus">+</button></td>
            <td><button id="btn_minus">-</button></td>
            <td><button id="btn_multi">×</button></td>
            <td><button id="btn_div">÷</button></td>
            <td><button id="btn_clear">C</button></td>
        </tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr>
            <td></td>
            <td><button class="num_btn">1</button></td>
            <td><button class="num_btn">2</button></td>
            <td><button class="num_btn">3</button></td>
            <td></td>
        </tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr>
            <td></td>
            <td><button class="num_btn">4</button></td>
            <td><button class="num_btn">5</button></td>
            <td><button class="num_btn">6</button></td>
            <td></td>
        </tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr>
            <td></td>
            <td><button class="num_btn">7</button></td>
            <td><button class="num_btn">8</button></td>
            <td><button class="num_btn">9</button></td>
            <td></td>
        </tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr><td></td><td></td><td></td><td></td></tr>
        <tr>
            <td></td>
            <td><button class="num_btn">0</button></td>
            <td><button id="btn_equal">=</button></td>
        </tr>

    </table>
    <br />
    <div id="debug_area">
    </div>
</div>
</body>
</html>
